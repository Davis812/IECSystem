<!doctype html>
<html>
<head>
<meta charset="UTF-8">
<title>室内环境控制系统</title>
<link rel="stylesheet" href="/shows/lib/bootstrap-3.1.1-dist/css/bootstrap.min.css">
<link rel="stylesheet" href="/shows/css/less.css">
<script src="/shows/lib/jquery/jquery-1.11.0.min.js"></script>
<script src="/shows/lib/bootstrap-3.1.1-dist/js/bootstrap.min.js"></script>
</head>

<body>
<div class="container">
	<div class="side">
            <div class="list-group">
            	<a href="#" class="list-group-item">
                    <span class="glyphicon glyphicon-globe"></span> 访问网站
                </a>
                <a href="#" class="list-group-item">
                	<span class="badge">8</span>
                    <span class="glyphicon glyphicon-home"></span> 仪表盘
                </a>
                <a href="#" class="list-group-item">
                	<span class="badge">3</span>
                    <span class="glyphicon glyphicon-list-alt"></span> 订餐
                </a>
                <a href="#" class="list-group-item active">
                	<span class="badge">14</span>
                    <span class="glyphicon glyphicon-file"></span> 内容
                </a>
                <a href="#" class="list-group-item">
                	<span class="badge">8</span>
                    <span class="glyphicon glyphicon-comment"></span> 评论
                </a>
                <a href="#" class="list-group-item">
                    <span class="glyphicon glyphicon-user"></span> 用户
                </a>
                <a href="#" class="list-group-item">
                    <span class="glyphicon glyphicon-cog"></span> 设置
                </a>
                 <a href="#" class="list-group-item" id="btn-signout">
                    <span class="glyphicon glyphicon-off"></span> 注销
                </a>
            </div>
    </div>
    <div class="main">
    	<div class="main-header">
            <h4>
                <span class="glyphicon glyphicon-file"></span> 内容管理 <small>文章、分类、页面、文件、标签管理</small>
            </h4>
            <div class="block-margin clearfix">
                <ul class="nav nav-pills pull-left">
                  <li class="active"><a href="#">文章</a></li>
                  <li><a href="#">分类</a></li>
                  <li><a href="#">页面</a></li>
                  <li><a href="#">文件</a></li>
                  <li><a href="#">标签</a></li>
                </ul>
                <div class="pull-right hidden" style="width:25%;">
                    <div class="input-group">
                      <input type="text" class="form-control">
                      <span class="input-group-btn">
                        <button class="btn btn-default" type="button"><span class="glyphicon glyphicon-search"></span></button>
                        <button class="btn btn-primary" type="button"><span class="glyphicon glyphicon-filter"></span></button>
                      </span>
                    </div>
                </div>
                <div class="btn-group pull-right js-view-hidden">
                  <button type="button" class="btn btn-success"> <span class="glyphicon glyphicon-ok"></span> 保存</button>
                  <button type="button" class="btn btn-default"> <span class="glyphicon glyphicon-remove"></span> 关闭</button>
                </div>
            </div>
        </div>
        <div class="main-body">
        	<div class="panel panel-default js-view-hidden">
              <div class="panel-heading">过滤器</div>
              <div class="panel-body"></div>
            </div>
            <div class="panel panel-default">
              <div class="panel-heading hidden">文章管理</div>
              <div class="panel-body clearfix">
              	<div class="btn-group pull-left">
                  <button type="button" class="btn btn-success">
                  	<span class="glyphicon glyphicon-plus"></span> 添加内容
                  </button>
                  <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown">
                      <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu">
                      <li><a href="#">Dropdown link</a></li>
                      <li><a href="#">Dropdown link</a></li>
                    </ul>
                </div>
                <div class="btn-group pull-right js-view-hidden">
                  <button type="button" class="btn btn-primary"> <span class="glyphicon glyphicon-th"></span></button>
                  <button type="button" class="btn btn-default"> <span class="glyphicon glyphicon-th-list"></span></button>
                  <button type="button" class="btn btn-default"> <span class="glyphicon glyphicon-cog"></span></button>
                </div>
              	<div class="btn-group pull-right" style="padding-right:10px;">
                  <button type="button" class="btn btn-default"> <span class="glyphicon glyphicon-chevron-left"></span></button>
                  <button type="button" class="btn btn-default"> <span class="glyphicon glyphicon-chevron-right"></span></button>
                </div>
              </div>
                <table class="table table-striped">
                	<thead>
                        <tr>
                            <th width="40">#</th>
                            <th>账号</th>
                            <th>姓名</th>
                            <th>email</th>
                            <th>管理</th>
                        </tr>
                    </thead>
             		<tbody>
                        <% body.forEach(function(user,index){%>
                        <tr>
                            <td><%= index + 1%></td>
                            <td><%= user.user_id%></td>
                            <td><%= user.user_name%></td>
                            <td><%= user.user_sex%></td>
                            <td><%= user.user_age%></td>
                            <td><%= user.user_previliege%></td>
                            <td>
                            	<a href="#"><span class="glyphicon glyphicon-pencil"></span></a>
                                <a href="#"><span class="glyphicon glyphicon-trash"></span></a>
                                <a href="#"><span class="glyphicon glyphicon-eye-open"></span></a>
                            </td>
                        </tr>
                        <%})%>
                    </tbody>
              </table>
                <div class="panel-footer">
                	<ul class="pagination">
                      <li><a href="#">&laquo;</a></li>
                      <li class="active"><a href="#">1</a></li>
                      <li><a href="#">2</a></li>
                      <li><a href="#">3</a></li>
                      <li><a href="#">4</a></li>
                      <li><a href="#">5</a></li>
                      <li><a href="#">&raquo;</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="main-body hidden">
        	<h4><span class="glyphicon glyphicon-plus"></span>  添加新内容 <small>添加新的内容文章</small></h4>
            <hr>
            <form role="form">
              <div class="form-group">
                <label for="exampleInputEmail1">标题</label>
                <input type="email" class="form-control" id="exampleInputEmail1" placeholder="在这里输入标题">
              </div>
              <div class="form-group">
                <label for="exampleInputPassword1">内容</label>
                <textarea class="form-control" rows="10"></textarea>
              </div>
              <div class="form-group">
                <label for="exampleInputFile">文件</label>
                <input type="file" id="exampleInputFile">
                <p class="help-block">选择要上传的文件</p>
              </div>
              <div class="checkbox">
                <label>
                  <input type="checkbox"> 立即发布
                </label>
              </div>
              <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-ok"></span> 保存</button> 
              <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-remove"></span> 关闭</button>
            </form>
        </div>
        <h4>内容标题 <button type="button" class="close" aria-hidden="true">&times;</button></h4>
        <hr>
        <form role="form">
          <div class="form-group">
            <label for="exampleInputEmail1">标题</label>
            <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter email">
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">内容</label>
            <textarea class="form-control" rows="3"></textarea>
          </div>
          <div class="form-group">
            <label for="exampleInputFile">文件</label>
            <input type="file" id="exampleInputFile">
            <p class="help-block">选择要上传的文件</p>
          </div>
          <div class="checkbox">
            <label>
              <input type="checkbox"> 立即发布
            </label>
          </div>
          <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-ok"></span> 保存</button> 
          <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-remove"></span> 关闭</button>
        </form>
    </div>
</div>
<script>
	$('.signin-container button').click(function(){
		$('.signin-container').fadeOut();
		return false;
	});
	
	$('#btn-signout').click(function(){
		$('.signin-container').fadeIn();
		return false;
	});
</script>
</body>
</html>